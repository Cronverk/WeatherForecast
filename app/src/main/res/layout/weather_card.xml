<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/weather_icon"
        android:layout_marginLeft="20px">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="lk;lk;l4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/weather_icon"
            android:layout_toEndOf="@+id/weather_icon"
            android:layout_marginTop="25px" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="op4"
            android:layout_below="@+id/date"
            android:layout_alignLeft="@+id/date"
            android:layout_alignStart="@+id/date" />

        <TextView
            android:id="@+id/temperature"
            android:text="@string/temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_below="@+id/city"
            android:layout_alignLeft="@+id/city"
            android:layout_alignStart="@+id/city"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/humidity"
            android:text="@string/humidity_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="25px">
        </TextView>

        <TextView
            android:id="@+id/pressure"
            android:text="@string/pressure_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">
        </TextView>
        <TextView
            android:id="@+id/wind"
            android:text="@string/wind_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">
        </TextView>
    </LinearLayout>

    <com.weather.forecast.design.views.WeatherIcon
        android:id="@+id/weather_icon"
        android:text="&#xf01b;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        android:padding="8px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.weather.forecast.design.views.WeatherGraph
        android:id="@+id/weatherGraph"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/weather_icon"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent" />
</RelativeLayout>